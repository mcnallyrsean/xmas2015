<div class="jumbotron">
  <h1>Create a gift for the list:</h1>
    <%= form_tag "/gifts", method: :post do %>
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter gift name here!" %>
      </div>
      <div class="form-group">
        <%= label_tag :price %>
        <%= text_field_tag :price, nil, class: "form-control", placeholder: "Enter gift price here!" %>
      </div>
      <div class="form-group">
        <%= label_tag :description %>
        <%= text_field_tag :description, nil, class: "form-control", placeholder: "Enter gift description here!" %>
      </div>
      <div class="form-group">
        <%= label_tag :image %>
        <%= text_field_tag :image, nil, class: "form-control", placeholder: "Enter image url here!" %>
      </div>
      <div class="form-group">
        <%= label_tag :url %>
        <%= text_field_tag :url, nil, class: "form-control", placeholder: "Enter where to buy it!" %>
      </div>
      <%= button_tag "Add to your Xmas List", class: "btn btn-default" %>
    <% end %>
</div>